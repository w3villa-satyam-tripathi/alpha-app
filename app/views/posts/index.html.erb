<h1>List of Posts</h1>

<table>
  <thead>
    <tr>
      <th><b>Name</b></th>
    </tr>  
  </thead>
  
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= link_to 'Show', post_path(post), class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-info" %></td>
        <td><%= link_to 'Delete', post_path(post), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table> 

<p>
  <%= link_to 'Create New Post', new_post_path, class: "btn btn-warning" %>
</p>
<p>
  <%= link_to 'Article ListS', articles_path, class: "btn btn-secondary" %>
</p>